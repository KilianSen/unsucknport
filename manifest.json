{
  "manifest_version": 2,
  "name": "UnSuckNPort",
  "version": "1.0",

  "description": "Mehrzweck-Erweiterung f√ºr Port-Monitoring und Gesundheitschecks von Webservices",

  "icons": {
  		"48": "icons/unsucknport.svg"
  },
  "browser_action": {
    "default_icon": "icons/unsucknport.svg",
    "default_title": "Port Monitor Pro",
    "default_popup": "popup/default.html"
  },
  "background": {
    "scripts": ["js/background/websocket-client.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "activeTab",
    "http://*/*",
    "https://*/*",
    "storage",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/scripts/default.js"],
      "run_at": "document_end"
    }
  ]

}
